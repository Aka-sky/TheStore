    <link rel="stylesheet" href="css/signupstyle.css">
    <title>TheVStore | Sign Up </title>
  </head>
  <body>
    <!-- <section id="head"> -->
      <nav class="navbar navbar-expand-md">
        <!-- Brand -->
        <p class="navbar-brand">TheVStore</p>
      
        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
        </button>
      
        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ml-auto custom-link">
          <li class="nav-item">
          <a class="nav-link" href="/login">Log In</a>
          </li>
          <li class="nav-item">
          <a class="nav-link" href="/">About Us</a>
          </li>
        </ul>
        </div>
      </nav>
      <!-- </section> -->
      <section id="main">
      <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign Up</h5>
            <p style="color: red;"><%= typeof msg != 'undefined' ? msg : '' %></p>
            <form class="form-signin" method="POST">
              <div class="form-label-group">
                <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus>
                <label for="username">Username</label>
              </div>

              <div class="form-label-group">
                <input type="text" id="name" name="name" class="form-control" placeholder="Name" required>
                <label for="name">Name</label>
              </div>

              <div class="form-label-group">
                <input type="email" id="email" name ='email' class="form-control" placeholder="Email address" required>
                <label for="email">Email address</label>
              </div>

              <div class="form-label-group">
                <input type="password" id="password" name = "password" class="form-control" placeholder="Password" required>
                <label for="password">Password</label>
              </div>

              <div class="form-label-group">
                <input type="number" id="contact" name="contact" class="form-control" placeholder="Username" maxlength="10" required>
                <label for="contact">Contact No.</label>
              </div>

               <div class="form-label-group">
                <input type="text" id="location" name="location" class="form-control" placeholder="Username" required>
                <label for="location">Location</label>
              </div>

              <div class="form-label-group">
                <input type="text" id="branchYear" name="branchYear" class="form-control" placeholder="Username" required>
                <label for="branchYear">Branch & Year</label>
              </div>

              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign Up</button></a>
              <hr class="my-4">
              <div id="social-link">
              <button class="btn btn-lg " type="button"><i class="fab fa-facebook btn-facebook"></i></button>
              <button class="btn btn-lg " type="button"><i class="fab fa-google-plus btn-google"></i></button>
            </div>
            <div class="last">
              Already have an account? 
              <a href="/login">Log In</a>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
      <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
