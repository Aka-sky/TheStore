<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/7cd5bd2715.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/homestyle.css">
    <title>TheVStore | Home | VJTI's own store </title>
  </head>
  <body>
        <nav class="navbar navbar-expand-lg fixed-top bg-light">
            <p class="navbar-brand">TheVStore</p>
            <form class="form-inline my-2 my-lg-0 search-bar" method="POST">
              <input class="form-control mr-sm-2" type="text" placeholder="Search" name="productname" aria-label="Search">
              <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
            </form>
            <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Welcome, <%= username %>  <i class="fas fa-user-circle"></i>  
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/profile/<%=username%>">Profile</a>
                    <a class="dropdown-item" href="/buylog">buylog</a>
                    <a class="dropdown-item" href="/selllog">selllog</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/logout">Log Out</a>
                  </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/sellproduct">Sell  </a>
                  </li>
                <li class="nav-item">
                  <a class="nav-link cart" href="/cart"><i class="fas fa-shopping-cart"></i> Cart</a>
                </li>
              </ul>
            </div>
          </nav>
          <section id="head"></section>
          <form class="form-inline my-2 my-lg-0 search-bar-1">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
          </form>
          <h1 class="describe">Get Items from your Seniors</h1>
          <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" data-interval="2000" data-pause="hover">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
              <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
              <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
              <li data-target="#carouselExampleCaptions" data-slide-to="4"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
              <div class="carousel-item active">
                <img src="../images/book1.jfif" class="d-block w-100" alt="..."/>
                <div class="carousel-caption d-none d-md-block">
                  <a href='/homepage/book'><h5 style="color: white;">Books</h5></a>
                </div>
              </div>
              <div class="carousel-item">
                <img src="../images/notes.jpg" class="d-block w-100" alt="..."/>
                <div class="carousel-caption d-none d-md-block">
                   <a href='/homepage/notes'><h5 style="color: white;">Notes</h5></a>
                </div>
              </div>
              <div class="carousel-item">
                <img src="../images/laptop.jpg" class="d-block w-100" alt="..."/>
                <div class="carousel-caption d-none d-md-block">
                   <a href='/homepage/clothing'><h5 style="color: white;">Lab Coats</h5></a>
                </div>
              </div>
              <div class="carousel-item">
                <img src="../images/laptop.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                   <a href='/homepage/electronics'><h5 style="color: white;">Electronics</h5></a>
                </div>
              </div>
              <div class="carousel-item">
                <img src="../images/others.jfif" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                   <a href='/homepage/other'><h5 style="color: white;">Others</h5></a>
                </div>
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
    </section>
    <hr width="90%">
    <section id="products">
      <h1>Recommended Products for you</h1>
    <div class="row">
      <% for(var i=0; i< product.length; i++) { %>
      <div class="col-lg-4 col-md-6 center-block">
        <div class="card" style="width: 16rem;">
          <img class="card-img-top" src="<%= product[i][3] %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= product[i][0] %></h5>
            <p class="card-text"><%= product[i][2] %></p>
            <p class="card-text">Rs. <%= product[i][1] %></p>
            <a href="/product/<%= product[i][4] %>" class="btn btn-primary">More Info</a>
            <a href="/cart/<%= product[i][4]%>" class="btn btn-primary">Add to Cart</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    
    </section>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>
