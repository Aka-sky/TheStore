    <div class="container">
      <h1>Sell Product</h1>
      <hr />
      <div class="row">
        <!-- left column -->
        <div class="col-md-3">
          <div class="text-center">
            <img
              src="../images/sellicon.svg"
              class="avatar img-circle"
              alt="avatar"
            />
            <h6>Upload a different photo...</h6>

            <input type="file" class="form-control" />
          </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">
          <div class="alert alert-info alert-dismissable">
            <a class="panel-close close" data-dismiss="alert">Ã—</a>
            <i class="fa fa-coffee"></i>
            This is an <strong>.alert</strong>. Use this to show important
            messages to the user.
          </div>
          <h3>Product info</h3>

          <form class="form-horizontal" role="form" method="POST">
            <div class="form-group">
              <label class="col-lg-3 control-label">Product Name:</label>
              <div class="col-lg-8">
                <input class="form-control" type="text" placeholder="name" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label">Years of Usage:</label>
              <div class="col-lg-8">
                <input class="form-control" type="number" placeholder="usage" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label">Condition:</label>
              <div class="col-lg-8">
                <input
                  class="form-control"
                  type="text"
                  placeholder="condition"
                />
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label">Price:</label>
              <div class="col-lg-8">
                <input class="form-control" type="number" placeholder="price" />
              </div>
            </div>
            <div class="form-group">
              <label for="category" class="col-lg-3 control-label"
                >Choose Category</label
              >
              <div class="col-lg-8">
                <select
                  class="form-control"
                  onchange="changeOptions(this)"
                  name="category-options"
                >
                  <option value="books">Books</option>
                  <option value="notes">Notes</option>
                  <option value="clothing">Clothing</option>
                  <option value="electronics">Electronics</option>
                  <option value="others">Others</option>
                </select>
              </div>
            </div>

            <form
              class="form-horizontal form-books category"
              role="form"
            ></form>

            <form
              class="form-horizontal form-books category"
              role="form"
              name="books"
              style="display:block"
            >
              <div class="form-group">
                <label class="col-lg-3 control-label">Author Name:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Author name"
                    id="author_name"
                    name="author_name"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Publication:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="publication"
                    id="publication"
                    name="publication"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Edition:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="edition"
                    id="edition"
                    name="edition"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Subject:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="subject"
                    id="subject"
                    name="subject"
                  />
                </div>
              </div>
            </form>

            <form
              class="form-horizontal form-notes category"
              role="form"
              name="notes"
              style="display:none"
            >
              <div class="form-group">
                <label class="col-lg-3 control-label">Professor:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Professor"
                    id="professor"
                    name="professor"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Subject:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="subject"
                    id="n_subject"
                    name="n_subject"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Topic:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="topic"
                    id="topic"
                    name="topic"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Year:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="number"
                    placeholder="year"
                    id="year"
                    name="year"
                  />
                </div>
              </div>
            </form>

            <form
              class="form-horizontal form-clothing category"
              role="form"
              name="clothing"
              style="display:none"
            >
              <div class="form-group">
                <label class="col-lg-3 control-label">Type:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="type"
                    id="type"
                    name="type"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Size:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="number"
                    placeholder="size"
                    id="size"
                    name="size"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Color:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="color"
                    id="color"
                    name="color"
                  />
                </div>
              </div>
            </form>

            <form
              class="form-horizontal form-others category"
              role="form"
              name="others"
              style="display:none"
            >
              <div class="form-group">
                <label class="col-lg-3 control-label">Category:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="category"
                    id="cate"
                    name="cate"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Description:</label>
                <div class="col-lg-8">
                  <textarea
                    rows="3"
                    class="form-control"
                    type="text"
                    placeholder="description"
                    id="description"
                    name="description"
                  ></textarea>
                </div>
              </div>
            </form>

            <form
              class="form-horizontal form-electronics category"
              role="form"
              name="electronics"
              style="display:none"
            >
              <div class="form-group">
                <label for="category-electronics" class="col-lg-3 control-label"
                  >Elecronics Category</label
                >
                <div class="col-lg-8">
                  <select
                    id="category"
                    class="form-control"
                    onchange="changeOptionsSub(this)"
                  >
                    <option value="calculators">Calculators</option>
                    <option value="pcs">PCs</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Description:</label>
                <div class="col-lg-8">
                  <textarea
                    rows="3"
                    class="form-control"
                    type="text"
                    placeholder="description"
                    id="e_description"
                    name="e_description"
                  ></textarea>
                </div>
              </div>
            </form>

            <form
              class="form-horizontal form-calculators electronics"
              role="form"
              name="calculators"
              style="display:none"
            >
              <div class="form-group">
                <label class="col-lg-3 control-label">Model:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="model"
                    id="model"
                    name="model"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Brand:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="brand"
                    id="brand"
                    name="brand"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Features:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="features"
                    id="features"
                    name="features"
                  />
                </div>
              </div>
            </form>

            <form
              class="form-horizontal form-laptops electronics"
              role="form"
              name="pcs"
              style="display:none"
            >
              <div class="form-group">
                <label class="col-lg-3 control-label">OS:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="os"
                    id="os"
                    name="os"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Storage:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="storage"
                    id="storage"
                    name="storage"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Processor:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="processor"
                    id="processor"
                    name="processor"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">RAM:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="RAM"
                    id="ram"
                    name="ram"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Brand:</label>
                <div class="col-lg-8">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="brand"
                    id="brand"
                    name="brand"
                  />
                </div>
              </div>
            </form>
            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-md-8">
                <input
                  type="submit"
                  class="btn btn-primary"
                  value="Add Product"
                />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <hr />

    <script>
      function changeOptions(selectEl) {
        let selectedValue = selectEl.options[selectEl.selectedIndex].value;
        let subForms = document.getElementsByClassName("category");
        for (let i = 0; i < subForms.length; i += 1) {
          if (selectedValue === subForms[i].name) {
            subForms[i].setAttribute("style", "display:block");
          } else {
            subForms[i].setAttribute("style", "display:none");
          }
        }
      }

      function changeOptionsSub(selectEl) {
        let selectedValue = selectEl.options[selectEl.selectedIndex].value;
        let subForms = document.getElementsByClassName("electronics");
        for (let i = 0; i < subForms.length; i += 1) {
          if (selectedValue === subForms[i].name) {
            subForms[i].setAttribute("style", "display:block");
          } else {
            subForms[i].setAttribute("style", "display:none");
          }
        }
      }
    </script>

