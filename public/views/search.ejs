<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/7cd5bd2715.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/search.css">
    <title>TheVStore | Search | <%= category %></title>
  </head>
  <body>
        <nav class="navbar navbar-expand-lg fixed-top bg-light">
            <p class="navbar-brand">TheVStore</p>
            <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/homepage">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link cart" href="/cart"><i class="nav-link fas fa-shopping-cart"></i></a>
                  </li>
              </ul>
            </div>
            <form class="search-bar w-100" method="POST">
              <input class="w-75 search-inp" type="text" placeholder="<%= searchmsg %>" name="productname">
              <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
            </form>
          </nav>
    <section id="products">
      <% if (product.length > 0) { %>
      <h1><%= heading %></h1>
    <div class="row">
      <% for(var i=0; i< product.length; i++) { %>
      <div class="col-lg-4 col-md-6 center-block">
        <div class="card" style="width: 90%;">
          <img class="card-img-top" src="<%= product[i][3] %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= product[i][0] %></h5>
            <p class="card-text"><%= product[i][2] %></p>
            <p class="card-text">Rs. <%= product[i][1] %></p>
            <a href="/product/<%= product[i][4] %>" class="btn btn-primary">More Info</a>
            <a href="/cart/<%= product[i][4]%>" class="btn btn-primary">Add to Cart</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <div style="text-align: center; margin-top: 5%;"><div id="loadmore" class="btn btn-primary">More</div></div>
  <% } else { %>
    <h4 style="text-align: center;">No Results</h4>
  <% } %>
    </section>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script>
      $('#products .card').slice(0,3).show();
      $('#loadmore').on('click', function(){
        $('#products .card:hidden').slice(0,3).show();
        if( $('#products .card:hidden').length === 0 ){
          $('#loadmore').hide();
        }
      });
    </script>
    </body>
</html>
